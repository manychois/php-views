{
  "name": "manychois/views",
  "description": "A naive PHP template library",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Siu Pang Tommy Choi",
      "email": "manychois@gmail.com"
    }
  ],
  "keywords": [
    "template"
  ],
  "require": {
    "php": ">=8"
  },
  "require-dev": {
    "php": ">=8",
    "phpunit/phpunit": ">=10",
    "squizlabs/php_codesniffer": ">=3",
    "slevomat/coding-standard": ">=8"
  },
  "autoload": {
    "psr-4": {
      "Manychois\\Views\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Manychois\\Views\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "phpcs": "phpcs --standard=phpcs.xml -s",
    "phpcbf": "phpcbf --standard=phpcs.xml || true",
    "format": [
      "@phpcbf",
      "@phpcs"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
